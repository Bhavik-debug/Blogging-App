<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>

    <!-- Bootstrap Icons CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        body {
            background-color: rgb(221, 221, 201);
            font-family: "Inter", Arial, sans-serif;
        }

        h1, h5 {
            font-family: "Inter", sans-serif;
            font-weight: 600;
        }

        .container {
            margin-top: 40px;
        }

        .card {
            border: none;
            border-radius: 18px;
            overflow: hidden;
            box-shadow: 0 4px 10px rgba(0,0,0,0.08);
            transition: transform 0.25s ease, box-shadow 0.25s ease;
            background: #ffffff;
            position: relative; /* important for delete button */
        }

        .card:hover {
            transform: translateY(-8px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.12);
        }

        .card-img-top {
            height: 200px;
            object-fit: cover;
        }

        .card-title {
            font-size: 1.1rem;
            margin-bottom: 12px;
        }

        .btn-primary {
            width: 100%;
            padding: 10px 0;
            border-radius: 10px;
            background: #4a74ff;
            border: none;
            transition: 0.2s ease;
        }

        .btn-primary:hover {
            background: #355def;
            transform: scale(1.03);
        }

        /* DELETE BUTTON STYLE */
        .delete-btn {
            position: absolute;
            top: 10px;
            right: 10px;
            background: rgba(255, 0, 0, 0.85);
            border: none;
            color: white;
            padding: 8px 10px;
            border-radius: 50%;
            font-size: 16px;
            cursor: pointer;
            z-index: 10;
            transition: 0.2s ease;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .delete-btn{
            background-color: #355def;
        }

        .delete-btn:hover {
            background: rgb(2, 2, 87);
            transform: scale(1.1);
        }

        /* Responsive grid fix */
        @media (max-width: 768px) {
            .row.row-cols-4 {
                grid-template-columns: repeat(2, 1fr) !important;
                display: grid !important;
                gap: 20px;
            }
        }

        @media (max-width: 480px) {
            .row.row-cols-4 {
                grid-template-columns: 1fr !important;
            }
        }
    </style>

    <title>homePage</title>
</head>

<body>
    <%- include('./partials/nav') %>

    <div class="container mt-4">
        <div class="row row-cols-4">
            <% blogs.forEach(blog=> { %>
                <div class="col">
                    <div class="card col mb-4" style="width: 18rem; position: relative;">

                        <% if (user && blog.createdBy && user.id === blog.createdBy._id.toString()) { %>
                            <form action="/blog/<%= blog._id %>?_method=DELETE" method="POST" style="display:inline;">
                              <button class="delete-btn" type="submit">
                                <i class="bi bi-trash"></i>
                              </button>
                            </form>
                        <% } %>

                        <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title"><%= blog.title %></h5>
                            <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>                            
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <%- include('./partials/scripts') %>
</body>

</html>
