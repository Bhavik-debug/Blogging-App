<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>

    <style>
        body {
            background-color: rgb(221, 221, 201);
            font-family: "Inter", Arial, sans-serif;
        }

        .container {
            max-width: 500px;
           background: rgb(217, 235, 241);
            padding: 35px 30px;
            border-radius: 18px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.08);
            margin-top: 60px;
            animation: fadeIn 0.5s ease-in-out;
        }

        .text-center a {
            text-decoration: none;
            color: #5273ff;
            font-weight: 600;
        }

        .text-center a:hover {
            text-decoration: underline;
        }

        label {
            font-weight: 500;
            margin-bottom: 5px;
        }

        .form-control {
            border-radius: 12px;
            padding: 10px 14px;
            box-shadow: none;
            border: 1px solid #cbd4e3;
            transition: border-color 0.2s ease, box-shadow 0.2s ease;
        }

        .form-control:focus {
            border-color: #5273ff;
            box-shadow: 0 0 0 3px rgba(82, 115, 255, 0.25);
        }

        .btn-primary {
            width: 100%;
            padding: 10px 0;
            border-radius: 12px;
            background: #5273ff;
            font-size: 1rem;
            border: none;
            font-weight: 600;
            transition: 0.25s ease;
            margin-top: 10px;
        }

        .btn-primary:hover {
            background: #3f5eff;
            transform: translateY(-3px);
            box-shadow: 0 6px 12px rgba(82, 115, 255, 0.3);
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(12px); }
            to   { opacity: 1; transform: translateY(0); }
        }
    </style>


    <title>SignUp</title>
</head>

<body>
    <%- include('./partials/nav') %>

        <div class="container mt-4">
            <div class="text-center mb-2">
                <span>Already have an account? </span>
                <a href="/user/signin">SignIn</a>
            </div>

            <form action="/user/signup" method="post" autocomplete="off">
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Full Name</label>
                    <input type="text" class="form-control" name="fullName" id="fullName" aria-describedby="fullName">
                    <div class="form-text"></div>
                </div>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Email address</label>
                    <input type="email" class="form-control" name="email" id="exampleInputEmail1"
                        aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Password</label>
                    <input type="password" class="form-control" name="password" id="exampleInputPassword1">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>

    <%- include('./partials/scripts') %>
</body>

</html>